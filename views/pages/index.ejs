<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ | ShopProject</title>
    <link rel="stylesheet" href="/public/css/profile.css" />
    <%- include('../components/head'); %>
</head>
<body>
    <%- include('../components/header'); %>

    <% if(category.length > 0) { %>
        <section class="container slider">
            <div class="container__category__title">Danh mục</div>
            <div class="container__category" current-slide="0" slide-width="50,20,10" slide-status="play" slide-arrow="next">
                <div class="container__category__wrapper">
                    <ul class="container__category__list">
                        <% if(category.length > 20) { %>
                            <% for(x in category){ %>
                                <% if(x%2 == 0){ %>
                                  <li class="container__category__item">
                                    <div class="category__group">
                                        <a href="/category-view/<%= category[x]._id %>" title="Danh mục <%= category[x].categoryName %>">
                                            <div class="category__group__image">
                                                <div class="category__group__image--circle">
                                                    <ul class="circle__list">
                                                        <li class="circle__item"></li>
                                                        <li class="circle__item circle__item--second"></li>
                                                        <li class="circle__item circle__item--third"></li>
                                                        <li class="circle__item circle__item--fourth"></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="category__group__details">
                                                <%= category[x].categoryName %>
                                            </div>
                                        </a>
                                <% }else{ %>
                                        <a href="/category-view/<%= category[x]._id %>" title="Danh mục <%= category[x].categoryName %>">
                                            <div class="category__group__image">
                                                <div class="category__group__image--circle">
                                                    <ul class="circle__list">
                                                        <li class="circle__item"></li>
                                                        <li class="circle__item circle__item--second"></li>
                                                        <li class="circle__item circle__item--third"></li>
                                                        <li class="circle__item circle__item--fourth"></li>
                                                    </ul>
                                                </div>
                                            </div>
                                            <div class="category__group__details">
                                                <%= category[x].categoryName %>
                                            </div>
                                        </a>
                                    </div>
                                </li>`;
                                <% } %>
                            <% } %> 
                            
                            <% if(category.length%2 != 0){ %>
                                </div></li>
                            <% } %>
                        <% } else { %>
                            <% for(x in category){ %>
                                <li class="container__category__item">
                                  <div class="category__group">
                                      <a href="/category-view/<%= category[x]._id %>" title="Danh mục <%= category[x].categoryName %>">
                                          <div class="category__group__image">
                                              <div class="category__group__image--circle">
                                                  <ul class="circle__list">
                                                      <li class="circle__item"></li>
                                                      <li class="circle__item circle__item--second"></li>
                                                      <li class="circle__item circle__item--third"></li>
                                                      <li class="circle__item circle__item--fourth"></li>
                                                  </ul>
                                              </div>
                                          </div>
                                          <div class="category__group__details">
                                            <%= category[x].categoryName %>
                                          </div>
                                      </a>
                                  </div>
                                </li>
                            <% } %>
                        <% } %>
                    </ul>
                </div>
                <div class="container__arrow container__arrow--prev"><i class="fas fa-angle-left"></i></div>
                <div class="container__arrow container__arrow--next"><i class="fas fa-angle-right"></i></div>
            </div>
        </section>
    <% } %>

    <% if(brand.length > 0) { %>
        <section class="container slider">
            <div class="container__brand__title">Thương hiệu</div>
            <div class="container__brand" current-slide="0" slide-width="100,50,25" slide-status="play" slide-arrow="next">
                <div class="container__brand__wrapper">
                    <ul class="container__brand__list">
                        <% for(x in brand){ %>
                            <li class="container__brand__item">
                                <div class="brand__group">
                                    <a href="/brand-view/<%= brand[x]._id %>" title="Thương hiệu <%= brand[x].brandName %>">
                                        <div class="brand__group__image">
                                            <div class="brand__group__image--circle">
                                                <img src="<%= brand[x].logo %>" alt="Thương hiệu <%= brand[x].brandName %>">
                                            </div>
                                        </div>
                                        <div class="brand__group__details">
                                          <%= brand[x].brandName %>
                                        </div>
                                    </a>
                                </div>
                              </li>
                        <% } %>
                    </ul>
                </div>
                <div class="container__arrow container__arrow--prev"><i class="fas fa-angle-left"></i></div>
                <div class="container__arrow container__arrow--next"><i class="fas fa-angle-right"></i></div>
            </div>
        </section>
    <% } %>

    <section class="container shop">
        <div class="container__header">
            <div class="container__header__title">
                Gợi Ý Hôm Nay
            </div>
        </div>
        <div class="container__product">
            <ul class="container__product__list">
                <span class="container__product__no-item">
                    Không có sản phẩm nào hiển thị ở đây cả.
                </span>
            </ul>
            <span class="container__product__more">
                <a href="/all-product" class="see-more">Xem Thêm</a>
            </span>
        </div>

    </section>

    <%- include('../components/footer'); %>

</body>
<%- include('../components/footer_js'); %>
<script src="/public/js/home.js"></script>
</html>